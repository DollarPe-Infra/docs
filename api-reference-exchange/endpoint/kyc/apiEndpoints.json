        {
          "url": "https://sandbox.dollarpe.xyz/cms/api/v1",
          "description": "KYC API Base URL"
        }
      ],
      "requestBody": {
        "required": true,
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "required": [
                "customer_id",
                "source_of_income",
                "higher_limit_reason",
                "reason_support_doc_url",
                "bank_statement_url",
                "itr_report_url",
                "p2p_trading_status"
