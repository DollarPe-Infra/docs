              "properties": {
                "customer_id": {
                  "type": "string",
                  "format": "uuid",
                  "example": "4e6f1b20-a73c-11ec-b909-0242ac120002"
                },
                "source_of_income": {
                  "type": "string",
                  "enum": ["SALARY", "RENTAL_INCOME", "BUSINESS_INCOME", "LOAN", "SAVINGS", "OTHERS"],
                  "example": "SALARY"
                },
                "higher_limit_reason": {
                  "type": "string",
