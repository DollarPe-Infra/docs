                        "fiat": {
                          "type": "string",
                          "example": "INR"
                        },
                        "sending_amount": {
                          "type": "number",
                          "format": "float",
                          "example": 51
                        },
                        "rate": {
                          "type": "number",
                          "format": "float",
                          "example": 82.5
                        },
                        "receiving_amount": {
                          "type": "number",
                          "format": "float",
                          "example": 4144.6
                        },
                        "fees": {
                          "type": "object",
                          "properties": {
                            "dollarpe_fees": {
                              "type": "number",
                              "format": "float",
                              "example": 21.04
                            },
                            "tds_fees": {
                              "type": "number",
                              "format": "float",
                              "example": 41.86
                            }
                          }
                        },
                        "wallet_address": {
                          "type": "string",
                          "example": "0x2EAf174Bf1CD624eD63e3C8c74Dd66B66e5cb273"
                        },
                        "created_at": {
                          "type": "string",
                          "format": "date-time",
                          "example": "2025-03-08T07:31:11.163005Z"
                        },
                        "expiry_time": {
                          "type": "string",
                          "format": "date-time",
                          "example": "2025-03-08T07:36:11.163005Z"
