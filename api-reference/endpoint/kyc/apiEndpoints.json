{
  "/kyc/add-kyc-data": {
    "post": {
      "tags": ["KYC"],
      "x-title": "Add KYC Data",
      "description": "Add KYC information for a customer",
      "servers": [
        {
          "url": "https://sandbox.dollarpe.xyz/cms/api/v1",
          "description": "KYC API Base URL"
        }
      ],
      "requestBody": {
        "required": true,
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "required": [
                "customer_id",
                "full_name",
                "phone",
                "full_address",
                "dob",
                "document_type",
                "document_front_image_url",
                "document_back_image_url",
                "document_details"
              ],
              "properties": {
                "customer_id": {
                  "type": "string",
                  "format": "uuid",
                  "example": "4e6f1b20-a73c-11ec-b909-0242ac120002"
                },
                "full_name": {
                  "type": "string",
                  "example": "Apoorv Goyal"
                },
                "phone": {
                  "type": "string",
                  "example": "9910402972"
                },
                "full_address": {
                  "type": "string",
                  "example": "FULL_ADDRESS_OF_THE_CUSTOMER"
                },
                "dob": {
                  "type": "string",
                  "format": "date",
                  "example": "DD-MM-YYYY"
                },
                "pan_number": {
                  "type": "string",
                  "example": "CLBPG5935N"
                },
                "document_type": {
                  "type": "string",
                  "enum": ["AADHAAR", "PASSPORT"],
                  "example": "AADHAAR"
                },
                "document_front_image_url": {
                  "type": "string",
                  "format": "uri"
                },
                "document_back_image_url": {
                  "type": "string",
                  "format": "uri"
                },
                "document_details": {
                  "type": "object",
                  "required": ["document_number"],
                  "properties": {
                    "document_number": {
                      "type": "string",
                      "example": "123456123456"
                    },
                    "additional_data": {
                      "type": "object"
                    }
                  }
                }
              }
            }
          }
        }
      },
      "responses": {
        "200": {
          "description": "KYC data added successfully",
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "status": {
                    "type": "boolean",
                    "example": true
                  },
                  "message": {
                    "type": "string",
                    "example": "Success"
                  },
                  "data": {
                    "type": "object"
                  }
                }
              }
            }
          }
        }
      }
    }
  },
